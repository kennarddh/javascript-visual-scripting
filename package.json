{
	"name": "javascript-visual-scripting",
	"version": "1.1.0",
	"private": true,
	"homepage": "https://kennarddh.github.io/javascript-visual-scripting/",
	"dependencies": {
		"@testing-library/jest-dom": "^6.2.0",
		"@testing-library/react": "^12.1.5",
		"@testing-library/user-event": "^14.5.1",
		"flume": "^1.0.4",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router-dom": "^6.16.0",
		"react-scripts": "5.0.1",
		"styled-components": "^6.0.8",
		"web-vitals": "^3.5.0"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"commit": "git-cz",
		"prepare": "husky install",
		"lint:check": "eslint src/**/*.{js,jsx}",
		"lint:fix": "eslint --fix src/**/*.{js,jsx}",
		"prettier:fix": "prettier -w \"src/**/*.{js,jsx}\"",
		"prettier:check": "prettier -c \"src/**/*.{js,jsx}\"",
		"deploy": "npm run build && gh-pages -d build"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"eslint": "^8.51.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-react": "^7.33.2",
		"gh-pages": "^6.0.0",
		"git-cz": "^4.9.0",
		"husky": "^8.0.1",
		"prettier": "^3.0.3",
		"pretty-quick": "^3.1.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npx pretty-quick --staged ng lint:fix ng test"
		}
	}
}
